{
	"compilerOptions": {
		"outDir": "./build",
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"composite": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"@src/*": ["src/*"],
			"@images/*": ["src/assets/images/*"],
			"@redux/*": ["src/redux/*"],
			"@styles/*": ["src/styles/*"]
		},
		"lib": ["es6", "dom"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
